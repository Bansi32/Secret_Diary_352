<%-include('./partials/header')%> <%-include('./partials/navbar')%>
<div class="main_div">
  <div class="row">
    <div class="col-8">
      <div id="option">
        <ul>
          <li><a href="/login" onclick="prev()">Login</a></li>
          <li><a href="/register" onclick="next()">Register</a></li>
        </ul>
        <div id="RegisterMain">
          <form
            action="/register"
            method="POST"
            novalidate
            class="form2 validated-form"
          >
            <div class="row mb-3, register_div">
              <label
                class="form-label"
                for="inputName"
                class="col-sm-2 col-form-label"
                >Name</label
              >
              <div class="col-sm-10">
                <input
                  class="form-control"
                  type="text"
                  class="form-control"
                  id="inputName"
                  placeholder="eg: bkss"
                  name="name"
                  required
                />
                <div class="valid-feedback">Looks Great!</div>
              </div>
            </div>
            <div class="row mb-3, register_div">
              <label
                class="form-label"
                for="inputUsername"
                class="col-sm-2 col-form-label"
                >Username</label
              >
              <div class="col-sm-10">
                <input
                  class="form-control"
                  type="tex"
                  class="form-control"
                  id="inputEmail3"
                  placeholder="eg: bkss_352"
                  name="username"
                  required
                />
                <div class="valid-feedback">Looks Great!</div>
              </div>
            </div>
            <div class="row mb-3, register_div">
              <label
                class="form-label"
                for="inputEmail3"
                class="col-sm-2 col-form-label"
                >Email</label
              >
              <div class="col-sm-10">
                <input
                  class="form-control"
                  type="email"
                  class="form-control"
                  id="inputEmail3"
                  placeholder="eg: bkss352@gmail.com"
                  name="email"
                  required
                />
                <div class="valid-feedback">Looks Great!</div>
              </div>
            </div>
            <div class="row mb-3, register_div">
              <label
                class="form-label"
                for="inputPassword3"
                class="col-sm-2 col-form-label"
                >Password</label
              >
              <div class="col-sm-10">
                <input
                  class="form-control"
                  type="password"
                  class="form-control"
                  id="inputPassword3"
                  placeholder="eg: bkss@352"
                  name="password"
                  required
                />
                <div class="valid-feedback">Looks Great!</div>
              </div>
            </div>
            <button type="submit" class="btn btn-primary" id="btn1">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="container">
        <img src="img/image.jpg" alt="Women writing in diary" />
      </div>
    </div>
  </div>
</div>

<%-include('./partials/footer')%>
